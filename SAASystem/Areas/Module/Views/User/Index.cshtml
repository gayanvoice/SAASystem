@{
    ViewData["Title"] = "Apartment - Home Page";
}
@model SAASystem.Models.View.UserViewModel.Index;

<div class="container" id="hanging-icons">
    <div class="row g-4 row-cols-1 row-cols-lg-12 pb-2">
        <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-bottom">
            <div class="col-md-4 d-flex align-items-center">
                <h2>Users</h2>
            </div>

            <div class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <a asp-action="Insert" asp-controller="User" class="btn btn-primary btn-sm">Insert</a>
            </div>
        </div>
    </div>
    <div class="row g-4 row-cols-1 row-cols-lg-3 px-2">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">User Id</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Last Login</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel userModel in Model.UserModelEnumerable)
                {
                    <tr>
                        <th scope="row">@userModel.UserId</th>
                        <td>@userModel.Username</td>
                        <td>@userModel.Email</td>
                        <td>@userModel.LastLogin</td>
                        <td>
                            <a asp-action="Delete" asp-controller="User" asp-route-Key="@userModel.Key">Delete</a>
                            <a asp-action="Update" asp-controller="User" asp-route-Key="@userModel.Key">Update</a>
                            <a asp-action="Show" asp-controller="User" asp-route-Key="@userModel.Key">Show</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
