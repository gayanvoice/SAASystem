@using SAASystem.Models.Component.User
@model SAASystem.Models.View.User.IndexViewModel
@{
    ViewData["Title"] = Model.Title;
}
<link href="https://getbootstrap.com/docs/5.2/examples/features/features.css" rel="stylesheet">
<div class="px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Index</a> / @Model.Title</h2>

    <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
        @{
            foreach (ItemComponentModel itemComponentModel in Model.ItemComponentModelEnumerable)
            {
                <a id="btn" asp-controller="@itemComponentModel.Route.Controller" asp-action="@itemComponentModel.Route.Action" class="text-decoration-none">
                    <div class="col">
                        <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg"
                             style="background-image: url(@itemComponentModel.ImageUrl);">
                            <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                                <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">@itemComponentModel.Name</h3>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
</div>
