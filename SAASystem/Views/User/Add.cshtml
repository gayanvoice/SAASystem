@model SAASystem.Models.View.User.AddViewModel
@{
    ViewData["Title"] = Model.Title;
}

<link href="https://getbootstrap.com/docs/5.2/examples/features/features.css" rel="stylesheet">
<div class="px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">@Model.Title</h2>
    <div class="g-4 py-5">
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form class="needs-validation" form method="post" asp-controller="User" asp-action="Add">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="PhoneNo" class="form-label"></label>
                            <input asp-for="PhoneNo" class="form-control">
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Surname" class="form-label"></label>
                            <input asp-for="Surname" class="form-control">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="GivenName" class="form-label"></label>
                            <input asp-for="GivenName" class="form-control">
                            <span asp-validation-for="GivenName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <a asp-controller="User" asp-action="Index" class="w-100 btn btn-secondary btn-lg">Back</a>
                        </div>
                        <div class="col-sm-6">
                            <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
